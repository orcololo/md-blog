---
import { SITE, SOCIAL_LINKS } from '@/consts'
import SocialIcons from './SocialIcons.astro'
---

<footer class="mt-auto border-t border-dashed">
  <div
    class="mx-auto flex w-full max-w-3xl flex-col items-center justify-center gap-y-3 px-4 py-6 sm:flex-row sm:justify-between"
  >
    <span class="text-muted-foreground font-mono text-xs">
      <span class="text-primary">&#x25B8;</span>
      {SITE.author} &copy; {new Date().getFullYear()}<span
        class="animate-blink text-primary ml-0.5">_</span
      >
    </span>
    <SocialIcons links={SOCIAL_LINKS} />
  </div>
</footer>
