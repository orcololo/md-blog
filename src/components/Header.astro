---
import Link from '@/components/Link.astro'
import ThemeToggle from '@/components/ThemeToggle.astro'
import { NAV_LINKS, SITE } from '@/consts'
---

<div>
  <div
    class="mx-auto flex max-w-3xl items-center justify-between gap-4 px-4 py-3"
  >
    <Link href="/" class="flex shrink-0 items-center justify-center gap-2 font-mono group">
      <span class="text-primary">&#x25B8;</span>
      <span
        class="hidden text-sm font-medium min-[400px]:block"
        >{SITE.title}</span
      ><span class="animate-blink text-primary hidden min-[400px]:inline">_</span>
    </Link>
    <div class="flex items-center gap-4">
      <nav class="flex items-center gap-1 font-mono text-xs sm:text-sm">
        <span class="text-muted-foreground hidden sm:inline">[</span>
        {
          NAV_LINKS.map((item, i) => (
            <>
              {i > 0 && <span class="text-muted-foreground/40">|</span>}
              <Link
                href={item.href}
                class="text-muted-foreground hover:text-primary px-1.5 py-0.5 transition-colors"
              >
                {item.label}
              </Link>
            </>
          ))
        }
        <span class="text-muted-foreground hidden sm:inline">]</span>
      </nav>
      <ThemeToggle transition:persist />
    </div>
  </div>
</div>
