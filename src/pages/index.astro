---
import BlogCard from '@/components/BlogCard.astro'
import Link from '@/components/Link.astro'
import PageHead from '@/components/PageHead.astro'
import TerminalWindow from '@/components/TerminalWindow.astro'
import { buttonVariants } from '@/components/ui/button'
import { SITE } from '@/consts'
import Layout from '@/layouts/Layout.astro'
import { getRecentPosts } from '@/lib/data-utils'

const blog = await getRecentPosts(SITE.featuredPostCount)
---

<Layout class="max-w-3xl">
  <PageHead slot="head" title="Home" />
  <section class="flex flex-col gap-y-6">
    <TerminalWindow
      title={`terminal â€” ${SITE.author}`}
      class="animate-fade-in-up"
    >
      <div class="space-y-1.5 text-sm">
        <div class="flex gap-2">
          <span class="text-primary shrink-0">~</span>
          <span class="text-muted-foreground shrink-0">$</span>
          <span>whoami</span>
        </div>
        <p class="text-foreground/70">{SITE.author}</p>
        <div class="flex gap-2">
          <span class="text-primary shrink-0">~</span>
          <span class="text-muted-foreground shrink-0">$</span>
          <span>cat description.txt</span>
        </div>
        <p class="text-foreground/70">{SITE.description}</p>
        <div class="flex gap-2 pt-1">
          <span class="text-primary shrink-0">~</span>
          <span class="text-muted-foreground shrink-0">$</span>
          <span>ls posts/ --recent</span>
          <span class="animate-blink text-primary">&#9610;</span>
        </div>
      </div>
    </TerminalWindow>

    <h2
      class="animate-fade-in-up text-muted-foreground font-mono text-xs tracking-widest uppercase"
      style="animation-delay: 100ms"
    >
      // latest posts
    </h2>
    <ul class="flex flex-col gap-y-4">
      {
        blog.map((post, i) => (
          <li
            class="animate-fade-in-up"
            style={`animation-delay: ${(i + 2) * 100}ms`}
          >
            <BlogCard entry={post} />
          </li>
        ))
      }
    </ul>
    <div
      class="animate-fade-in-up flex justify-center"
      style={`animation-delay: ${(blog.length + 2) * 100}ms`}
    >
      <Link
        href="/blog"
        class={buttonVariants({ variant: 'ghost' }) +
          ' group font-mono text-xs'}
      >
        ls -a posts/ <span
          class="ml-1.5 transition-transform group-hover:translate-x-1"
          >&rarr;</span
        >
      </Link>
    </div>
  </section>
</Layout>
